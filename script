

btnConverti.addEventListener('click', function convertoCO2kg(){



let risultato1 = 0;
/* coefficiente di 0.233 kg di CO2 per kWh */
if (inputKwh.value > 0) {
 risultato1 = inputKwh.value * 0.233
 valoriKwh.textContent = inputKwh.value + ' kWh'
 console.log( `valore risultato1 : ${risultato1}`)
}  else if(inputKwh.value === null || inputKwh.value === undefined || inputKwh.value === 0 || inputKwh.value < 0) {
    rowEnergetiche.classList.add('display-none')
} else {
    rowEnergetiche.classList.remove('display-none')
}




/* coefficiente di 0.21 kg di CO2 per km */
let risultato2 = 0;
if(inputKm.value > 0) {
risultato2 = inputKm.value * 0.21
valoriKm.textContent = inputKm.value + ' km'
console.log( `valore risultato2: ${risultato2}`)

} else if(inputKm.value === null || inputKm.value === undefined || inputKm.value === 0 || inputKm.value < 0 ) {
    rowTrasporto.classList.add('display-none')
} else {
    rowTrasporto.classList.remove('display-none')   
}



/* coefficiente 6-10 kg di CO₂e per ogni kg di carne di pollo prodotto */

let risultato3 = 0;
if(inputKg.value > 0) {
    risultato3 = inputKg.value * 6
    valoriKg.textContent = inputKg.value + ' kg'
    console.log( `valore risultato3: ${risultato3}`)
} else if(inputKg.value === null || inputKg.value === undefined || inputKg.value === 0 || inputKg.value < 0 ) {
    rowCarne.classList.add('display-none')
} else {
    rowCarne.classList.remove('display-none')
}




valoriKwhKg.textContent = risultato1.toFixed(2) + ' kg' 
valoriKmKg.textContent = risultato2.toFixed(2) + ' kg'
valoriKgKg.textContent = risultato3.toFixed(2) + ' kg'




/* totale dei risultati */
let totale = risultato1 + risultato2 + risultato3;
console.log( `valore totale: ${totale}`)

if (totale > 0 && totale < 167) {
   document.querySelector('.valori-tot').classList.add('verde')
} else if (totale >= 167) {
    document.querySelector('.valori-tot').classList.add('rosso')
}

if( totale === 0 ) {
    table.classList.add('display-none')
} else {
    table.classList.remove('display-none')       
}

valoriTot.textContent = totale.toFixed(2)+ ' kg'



// Per evitare righe vuote 



if (totale > 0 && totale < 167) {
    risultato.innerHTML = 'Le tue emissioni totali di carbonio <br> vanno bene, <span class="giallo"> continua così</span>.';
} else if (totale >= 167) {
    risultato.innerHTML = '<span class="rosso"> Le tue emissioni totali di <br> carbonio non vanno bene, cerca <br> di abbassare i tuoi consumi.</span>';
} else {
    risultato.textContent = null;
}


})



